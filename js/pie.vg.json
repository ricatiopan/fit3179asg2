{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "title": "Suicides' Methods",
    "data": {"url": "https://raw.githubusercontent.com/ricatiopan/fit3179asg2/main/data/cause.csv"},

    "params": [
    {
    "name": "Year_selection",
    "value": 1994,
    "bind": {
    "input": "range",
    "min": 1994,
    "max": 2017,
    "step": 1,
    "name": "Year: "
    }
    }],
    "transform":[
    {"filter": "datum.Year == Year_selection"}
    ],

    "encoding": {
        "theta": {"field": "Percentage", "type": "quantitative"},
        "color": {"field": "Types", "type": "nominal"}
    },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
        "tooltip": [
            {"field": "Types", "type": "nominal", "title": "Method"},
            {"field": "Percentage", "type": "quantitative", "format": ".2f"}
          ]
    }
  }]
}
